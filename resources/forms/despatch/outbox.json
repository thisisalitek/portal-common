					},
					"localErrors": {
						"type": "grid",
						"text": "İşlem Hataları",
						"fields": {
							"_date": {
								"text": "Tarih Saat",
								"type": "datetime"
							},
							"code": {
								"text": "Kod",
								"type": "string"
							},
							"message": {
								"text": "Açıklama",
								"type": "string"
							}
						}
					}
				}
			}
		},
		"dataSource": {
			"method": "GET",
			"url": "/dbapi/despatch"
		}
	}]
